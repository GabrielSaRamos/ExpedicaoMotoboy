generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

enum VeiculoTipo {
  MOTO
  CARRO
}

model motoboy {
  id              Int      @id @default(autoincrement())
  nome            String
  cpf             String  @unique
  placa           String
  veiculo         VeiculoTipo
  cnh             String  @unique
  email           String
  CriadoEm        DateTime @default(now())
  seq             Int      @default(0)         // valor padr達o
  status          String   @default("")        // valor padr達o
  entregas        Int      @default(0)         // valor padr達o
  previsaoRetorno String   @default("")        // valor padr達o
}